<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/public_body"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_50">
    <!--toumingdu_rl 设置透明度的-->
    <RelativeLayout
        android:id="@+id/toumingdu_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>
       <!-- android:background="@color/bg_blue"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/back_public_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_return_defult"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="12"
            android:paddingLeft="@dimen/text_15"
            android:paddingRight="@dimen/text_20"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />
        <!--关闭-->
        <TextView
            android:id="@+id/finish_public_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/back_public_txt"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="12"
            android:paddingLeft="@dimen/text_15"
            android:paddingRight="@dimen/text_15"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <!--菜单-->
        <TextView
            android:id="@+id/next_public_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/text_8"
            android:paddingRight="@dimen/text_23"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/title_public"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_15"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />
        <!--菜单1-->
        <TextView
            android:id="@+id/right_next_public_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/text_15"
            android:layout_toLeftOf="@+id/next_public_txt"
            android:layout_toStartOf="@+id/next_public_txt"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/text_8"
            android:paddingRight="@dimen/text_8"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_1"
        android:layout_alignParentBottom="true"
        android:background="@color/text_color_15"
        android:orientation="horizontal"
        android:visibility="gone"/>
</RelativeLayout>
